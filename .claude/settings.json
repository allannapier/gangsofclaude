{
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Skill",
        "hooks": [
          {
            "type": "command",
            "command": "if echo \"$HOOK_TOOL_INPUT\" | jq -e '.skill == \"next-turn\"' > /dev/null 2>&1; then ./.claude/hooks/increment-turn.sh; fi"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "mkdir -p .claude/game-state && cp .claude/game-state/save.json .claude/game-state/save.backup.json 2>/dev/null || true"
          }
        ]
      }
    ],
    "SessionStart": [
      {
        "matcher": "startup|resume",
        "hooks": [
          {
            "type": "prompt",
            "prompt": "Check if a saved game exists at .claude/game-state/save.json. If it exists and has a player name set, inform the user that their saved game is ready. If the file doesn't exist or player name is empty, inform the user they can start a new game with /start-game."
          }
        ]
      }
    ]
  }
}
